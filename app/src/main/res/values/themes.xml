<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MiroNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="InputFieldPhone" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/colorHintText</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="MainButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.TextView">
        <item name="android:height">48dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/colorHintText</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:drawableEnd">@drawable/ic_expand_more_black</item>
    </style>

    <style name="Title01" parent="">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/strong</item>
    </style>

    <style name="Title02" parent="">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/strong</item>
    </style>

    <style name="Body" parent="">
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Input" parent="">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/medium</item>
    </style>

    <style name="Subtitle" parent="">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/medium</item>
    </style>

    <style name="Detail" parent="">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/medium</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/bg_spash</item>
    </style>

    <style name="Theme.MiroNote.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MiroNote.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MiroNote.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>